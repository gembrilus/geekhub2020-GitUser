<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">@dimen/textNormalSize</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="MainText.LittleText" parent="MainText">

        <item name="android:textSize">@dimen/textLittleSize</item>

    </style>

    <style name="MainText.TimeStamp" parent="MainText.LittleText">

        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">textEnd</item>

    </style>

    <style name="LoginText">
        <item name="android:textSize">@dimen/textLittleSize</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="HorizontalDivider">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">@dimen/marginNormal</item>
        <item name="android:layout_marginBottom">@dimen/marginNormal</item>

    </style>

</resources>
